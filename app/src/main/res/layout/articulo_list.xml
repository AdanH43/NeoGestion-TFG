<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeColor="@color/black"
        app:cardElevation="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="5dp">
        <androidx.constraintlayout.widget.ConstraintLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/tv_descripcion_escan"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="#2e6d98"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />
            <TextView
                android:id="@+id/lb_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="ID"
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_descripcion_escan"
                />
            <TextView
                android:id="@+id/tv_id_escan"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toEndOf="@id/lb_id"

                app:layout_constraintTop_toTopOf="@id/lb_id" />

            <TextView
                android:id="@+id/lb_alm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Ref."
                android:layout_marginStart="100dp"
                app:layout_constraintStart_toEndOf="@id/tv_id_escan"
                app:layout_constraintTop_toBottomOf="@id/tv_descripcion_escan"
                />
            <TextView
                android:id="@+id/tv_alm_escan"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/lb_alm"
                android:layout_marginStart="10dp"
                app:layout_constraintTop_toTopOf="@id/lb_alm" />
            <TextView
                android:id="@+id/lb_cbar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="cantidad"
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/lb_id"
                />
            <TextView
                android:id="@+id/tv_cbar_escan"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/lb_cbar"
                android:layout_marginStart="10dp"
                app:layout_constraintTop_toTopOf="@id/lb_cbar" />





        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>