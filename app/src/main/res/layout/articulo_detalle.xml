<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="150dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp">
        <androidx.constraintlayout.widget.ConstraintLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

         <TextView
             android:id="@+id/tv_descripcion"
             android:layout_width="match_parent"
             android:layout_height="0dp"
             android:background="@color/blue_300"
             android:textColor="@color/white"
             android:gravity="center"
             android:textStyle="bold"
             android:layout_marginBottom="10dp"
             app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintStart_toStartOf="parent"
             />
            <TextView
                android:id="@+id/lb_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="ID"
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_descripcion"
                />
            <TextView
                android:id="@+id/tv_id"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toEndOf="@id/lb_id"

                app:layout_constraintTop_toTopOf="@id/lb_id" />

            <TextView
                android:id="@+id/lb_alm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Ref"
                android:layout_marginStart="100dp"
                app:layout_constraintStart_toEndOf="@id/tv_id"
                app:layout_constraintTop_toBottomOf="@id/tv_descripcion"
                />
            <TextView
                android:id="@+id/tv_alm"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/lb_alm"
                android:layout_marginStart="10dp"
                app:layout_constraintTop_toTopOf="@id/lb_alm" />
            <TextView
                android:id="@+id/lb_cant"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Cantidad"
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/lb_id"
                />
            <TextView
                android:id="@+id/tv_cant"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/lb_cant"
                android:layout_marginStart="10dp"
                app:layout_constraintTop_toTopOf="@id/lb_cant" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp">
        <androidx.constraintlayout.widget.ConstraintLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/lb_precio"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Precio"
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />
            <TextView
                android:id="@+id/tv_precio"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="10dp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/lb_precio"
                app:layout_constraintTop_toTopOf="@id/lb_precio" />


            <TextView
                android:id="@+id/lb_categoria"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Categoria"
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/lb_precio"
                />
            <TextView
                android:id="@+id/tv_categoria"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="10dp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/lb_categoria"
                app:layout_constraintTop_toTopOf="@id/lb_categoria"
                />


            <TextView
                android:id="@+id/lb_stockmax"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Stock Max"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/lb_categoria"
                />
            <TextView
                android:id="@+id/tv_stockmax"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="10dp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/lb_categoria"
                app:layout_constraintTop_toTopOf="@id/lb_stockmax" />

            <TextView
                android:id="@+id/lb_clasi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Stock Min"
                android:layout_marginStart="100dp"
                app:layout_constraintStart_toEndOf="@id/tv_stockmax"
                app:layout_constraintTop_toTopOf="@id/tv_stockmax"
                />
            <TextView
                android:id="@+id/tv_clasi"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toEndOf="@id/lb_clasi"
                app:layout_constraintTop_toTopOf="@id/lb_clasi" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>